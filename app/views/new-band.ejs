<%- include('partials/header') %>

<h2 class="text-center">New Concert</h2>

<div class="container-fluid">

    <form method="post" action="/api/band">
        <div class="form-group">
            <label for="BandName">Band Name</label>
            <input type="text" class="form-control" id="BandName" placeholder="Band Name" name="bandName">
        </div>

        <div class="form-group">
            <label for="Genre">Genre</label>
            <select class="form-control" id="Genre" name="genreId">
                <% genres.forEach(genre => { %>
                    <option value="<%= genre.genreId %>"><%= genre.genreName %></option>
                <% }) %>
            </select>
        </div>
        <div class="form-group">
            <label for="Country">Country</label>
            <select class="form-control" id="Country" name="country">
                <% countries.forEach(country => { %>
                    <option value="<%= country.countryCode %>"><%= country.countryName %></option>
                <% }) %>
            </select>
        </div>
        <button types="submit" class="btn btn-primary">Create</button>
    </form>
</div>

<script type="text/javascript">
    require(['/scripts/main.js'], (main) => {
        // require(['modules/profile/main-profile']);
    });

</script>

<%- include('partials/footer') %>